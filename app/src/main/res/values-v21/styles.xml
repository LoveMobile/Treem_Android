<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base Treem App theme - API 21 + -->
    <style name="AppTheme" parent="BaseTheme">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">#FFFFFF</item>
    </style>

    <style name="AppTheme.DarkStatus" parent="BaseTheme">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/ColorPrimaryBar</item>
    </style>

    <style name="AppTheme.Transparent" parent="@style/AppTheme.TransparentBase" >
        <item name="android:statusBarColor">@color/dark_gray</item>
    </style>
</resources>