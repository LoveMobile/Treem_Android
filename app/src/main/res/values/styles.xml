<resources>
	<!-- App Theme - Api versions until next defined version number -->
	<style name="AppTheme" parent="BaseTheme">
		<!-- Nothing specific for lower versions... yet -->
	</style>

	<style name="AppTheme.DarkStatus" parent="BaseTheme">
		<!-- Nothing specific for lower versions... yet -->
	</style>

	<!-- Base Treem App theme - All API versions -->
	<style name="BaseTheme" parent="Theme.AppCompat">
		<!-- Window Styles -->
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
		<item name="windowActionBar">false</item>
		<item name="android:windowFullscreen">false</item>

		<item name="android:buttonStyle">@style/ButtonTheme</item>
		<item name="buttonStyle">@style/ButtonTheme</item>
	</style>

	<style name="AppTheme.Transparent" parent="@style/AppTheme.TransparentBase"/>

	<style name="DarkProgressBar" parent="Theme.AppCompat">
		<item name="colorControlActivated">@color/dark_gray</item>
	</style>

	<style name="AppTheme.TransparentBase" parent="AppTheme">
		<item name="android:windowIsTranslucent">true</item>
		<item name="android:windowBackground">@android:color/transparent</item>
		<item name="android:backgroundDimEnabled">true</item>
		<item name="android:backgroundDimAmount">0.8</item>
	</style>

	<style name="AppTheme.Dialog" parent="Theme.AppCompat.Light.Dialog">
		<item name="android:buttonStyle">@style/ButtonTheme</item>
