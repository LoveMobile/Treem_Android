<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/reward_mark_width_half"
        android:layout_marginRight="@dimen/reward_mark_width_half"
        android:layout_marginStart="@dimen/reward_mark_width_half"
        android:layout_marginEnd="@dimen/reward_mark_width_half">

        <TextView
            style="@style/RewardBarLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="start"
            android:text="0"
            tools:ignore="HardcodedText"/>

        <TextView
            style="@style/RewardBarLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="20"
            tools:ignore="HardcodedText"/>

        <TextView
            style="@style/RewardBarLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="40"
            tools:ignore="HardcodedText"/>

        <TextView
            style="@style/RewardBarLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="60"
            tools:ignore="HardcodedText"/>

        <TextView
            style="@style/RewardBarLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="80"
            tools:ignore="HardcodedText"/>

        <TextView
            style="@style/RewardBarLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="end"
            android:text="100"
            tools:ignore="HardcodedText"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/reward_bar_height"
        android:background="@drawable/gray_border"
        android:orientation="horizontal"

        android:layout_marginLeft="@dimen/reward_mark_width_half"
        android:layout_marginRight="@dimen/reward_mark_width_half"
        android:layout_marginStart="@dimen/reward_mark_width_half"
        android:layout_marginEnd="@dimen/reward_mark_width_half">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/reward_bar_segment_1"/>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/reward_bar_segment_2"/>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/reward_bar_segment_3"/>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/reward_bar_segment_4"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/reward_bar_segment_5"
            android:gravity="center"
            android:text="$"
            android:textColor="@color/white"
            android:textSize="13sp"
            tools:ignore="HardcodedText"/>

    </LinearLayout>
    <FrameLayout
        android:id="@+id/layoutPointer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/pointer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/reward_bar_mark"/>
    </FrameLayout>
</LinearLayout>