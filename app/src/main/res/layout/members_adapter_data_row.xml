<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rowRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/main_margin_v_half"
    android:paddingEnd="@dimen/main_margin_h"
    android:paddingLeft="@dimen/main_margin_h"
    android:paddingRight="@dimen/main_margin_h"
    android:paddingStart="@dimen/main_margin_h"
    android:paddingTop="@dimen/main_margin_v_half">

    <ImageView
        android:id="@+id/userAvatar"
        android:layout_width="@dimen/member_adapter_image_size"
        android:layout_height="@dimen/member_adapter_image_size"
        android:layout_gravity="top|start"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/main_margin_h_half"
        android:layout_marginStart="@dimen/main_margin_h_half"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/memberName"
                style="@style/StyleMemberName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/main_margin_h_half"
                android:layout_marginRight="@dimen/main_margin_h_half"/>
            <TextView
                android:id="@+id/contactName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/StyleMemberContactName"
                />
            <ImageView
                android:id="@+id/memberIcon"
                android:tint="@color/mid_light_gray"
                android:layout_width="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:adjustViewBounds="true"
                android:layout_height="@dimen/member_status_height"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/hexagon"
                android:layout_width="@dimen/member_hexagon_size"
                android:layout_height="@dimen/member_hexagon_size"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:tint="@color/dark_gray"
                android:src="@drawable/ic_hexgrid"/>

            <TextView
                android:id="@+id/memberUsername"
                style="@style/StyleMemberUsername"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/main_margin_h_half"
                android:layout_marginRight="@dimen/main_margin_h_half"
                android:layout_weight="1"/>

            <LinearLayout
                android:id="@+id/memberColors"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"/>
            <TextView
                android:id="@+id/memberPhone"
                style="@style/StyleMemberPhone"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/checkMark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:paddingBottom="8dp"
        android:paddingEnd="8dp"
        android:paddingLeft="5dp"
        android:paddingRight="8dp"
        android:paddingStart="8dp"
        android:paddingTop="8dp"
        android:src="@drawable/ic_check_back"
        android:tint="@color/mid_gray"/>
</LinearLayout>