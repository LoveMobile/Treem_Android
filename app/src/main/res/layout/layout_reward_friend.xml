<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              style="@style/SelectableItemBackground"
              android:paddingEnd="@dimen/main_margin_h"
              android:paddingLeft="@dimen/main_margin_h"
              android:paddingRight="@dimen/main_margin_h"
              android:paddingStart="@dimen/main_margin_h">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/friend_name"
            style="@style/StyleRewardFriend"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"/>

        <TextView
            android:id="@+id/friend_points"
            style="@style/StyleRewardFriend"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"/>

        <TextView
            android:id="@+id/friend_percent"
            style="@style/StyleRewardFriend"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"/>

        <TextView
            style="@style/StyleRewardFriend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="%"
            tools:ignore="HardcodedText"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_gray"/>
</LinearLayout>